<Window x:Class="Biometria.BinarizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biometria"
        mc:Ignorable="d"
        Title="BinarizeWindow" Height="300" Width="320">
    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Manual threshold:" Grid.Row="0"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,10">
                <TextBox x:Name="ThresholdTextBox" Width="80" Text="128"/>
                <Button Content="Apply" Margin="10,0,0,0" Width="80"
                        Click="BtnApplyManual_Click"/>
            </StackPanel>

            <TextBlock Text="Percent Black (%):" Grid.Row="2"/>
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,10">
                <TextBox x:Name="PercentBlackTextBox" Width="80" Text="50"/>
                <Button Content="Apply PBS" Margin="10,0,0,0" Width="80"
                        Click="BtnApplyPBS_Click"/>
            </StackPanel>

            <TextBlock Text="Mean Iterative Selection:" Grid.Row="4"/>
            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,5,0,10">
                <Button Content="Apply MIS" Width="120"
                        Click="BtnApplyMIS_Click"/>
            </StackPanel>

            <TextBlock Text="Otsu Thresholding:" Grid.Row="6"/>
            <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0,5,0,10">
                <Button Content="Apply Otsu" Width="120"
                        Click="BtnApplyOtsu_Click"/>
            </StackPanel>

            <TextBlock Text="Niblack Method:" Grid.Row="8"/>
            <StackPanel Grid.Row="9" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,5,0,10">
                <TextBox x:Name="NiblackSizeTextBox" Width="60" Height="20" Margin="0,0,10,0"/>
                <TextBox x:Name="NiblackKTextBox" Width="60" Height="20" Text="-0.2"/>
                <Button Content="Apply Niblack" Margin="10,0,0,0" Width="120" Height="20"
                        Click="BtnApplyNiblack_Click"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Window>